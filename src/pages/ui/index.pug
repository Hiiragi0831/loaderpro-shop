extends @pug/base

append globals
	- pageName = 'home'

append vars

block content
	.site
		include @components/header/header
		main.ui
			section.ui__svg
				.container
					+svg("person-dolly")
					+svg("revenue")
					+svg("tools")
			section.ui__slider
				+main-slider()
			section.ui__product
				.container
					.title
						h1 Вы уже смотрели
						a(href="#") Все товары
					.row
						+product({heat: true, status: 'green'})
						+product({status: 'green'})
						+product({status: 'orange'})
						+product({status: 'red'})
						+product({cache: true})
			section.ui__pop-category
				.container
					.title
						h1 Популярные категории
					.row
						include @components/category/category
						include @components/category/category
						include @components/category/category
						include @components/category/category
						include @components/category/category
			section.ui__category
				.container
					.title
						h1 Категории
					.row
						each item in data.category
							+group(item)
			section.ui__article
				.container
					.title
						h1 Статьи
					.row
						include @components/article/article
						include @components/article/article
						include @components/article/article
						include @components/article/article
			section.ui__advantage
				.container
					.row
						include @components/advantage/advantage
			section.ui__catalog
				.container
					.row
						.catalog__filters
							form.form
								fieldset
									legend Фильтры
								+select({
									placeholder: 'Бренд',
									name: 'brand',
									items: [
										{
											value: '0',
											label: 'Бренд 1'
										},
										{
											value: '1',
											label: 'Бренд 2'
										},
										{
											value: '2',
											selected: true,
											label: 'Бренд 3'
										},
									],
								})
								+select({
									placeholder: 'Категория',
									name: 'category',
									items: [
										{
											value: '0',
											selected: true,
											label: 'Категория 1'
										},
										{
											value: '1',
											label: 'Категория 2'
										},
										{
											value: '2',
											label: 'Категория 3'
										},
									],
								})
								button.button.button__primary(type="submit") Применить
						.catalog__products
							.catalog__sort
								p.catalog__sort-title Сортировка:
								button.catalog__sort-item.is-active(title="Популярные") Популярные
								button.catalog__sort-item(title="Новинки") Новинки
								button.catalog__sort-item(title="Сначала дешевые") Сначала дешевые
								button.catalog__sort-item(title="Сначала дорогие") Сначала дорогие
								button.catalog__sort-item(title="Высокий рейтинг") Высокий рейтинг
								button.catalog__sort-item(title="По размеру скидки") По размеру скидки
							.catalog__products-row
								+product()
								+product()
								+product()
								+product()
								+product()
								+product()
								+product()
								+product()
								+product()
								+product()
								+product()
								+product()

		include @components/footer/footer
