footer.footer
	.container
		.footer__top
			.footer__logo
				+svg('logo')
			.footer__city
				+svg('pin')
				p Санкт-Петербург
			.footer__phone
				+svg('phone')
				p #[a(href="tel:+7(982)570-40-44") +7(982)570-40-44] | #[a(href="tel:+7(982)570-40-44") +7(982)570-40-44]
			.footer__mail
				+svg('mail')
				p #[a(href="mailto:example@gmail.com") example@gmail.com]
			.footer__socials
				a.footer__social(href="#")
					+svg('vk')
				a.footer__social(href="#")
					+svg('tg')
				a.footer__social(href="#")
					+svg('wt')
				a.footer__social(href="#")
					+svg('youtube')
		.footer__main
			.footer__links.footer__links--navigation
				p.footer__links-head Навигация
				.footer__links-row
					each link in ['Главная', 'О компании', 'Клиентам', 'Способы оплаты', 'Частые вопросы', 'Отзывы', 'Новости и статьи', 'Контакты']
						a.footer__link(href="#")!= link
			.footer__links.footer__links--catalog
				p.footer__links-head Каталог
				.footer__links-row
					each link in ['Запчасти двигателя', 'Запчасти рулевого управления', 'Запчасти корпуса', 'Запчасти системы охлаждения', 'Запчасти шасси', 'Шины и диски', 'Фильтры', 'Запчасти мачт', 'Комплектующие и акссесуары', 'Запчасти трансмиссии', 'Запчасти электрики', 'Вилы и навесное оборудование', 'Запчасти гидравлики', 'Запчасти ведущего моста', 'Комплекты для ТО', 'Запчасти тормозной системы']
						a.footer__link(href="#")!= link
		.footer__bottom
			p Все права защищены. 2023
